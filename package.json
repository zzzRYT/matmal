{
  "name": "matmal",
  "private": true,
  "version": "0.0.2",
  "productName": "matmal",
  "description": "간편한 한국어 맞춤법 검사 데스크탑 앱",
  "author": "zzzryt <jinjinstar3@gmail.com>",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "icons": "./public/matmal-icon.png",
        "name": "matmal",
        "packagedName": "matmal",
        "executableName": "matmal"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "options": {
              "icon": "./src/assets/matmal-icon.ico",
              "name": "matmal",
              "productName": "matmal"
            }
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "./public/matmal-icon.png",
              "name": "matmal",
              "productName": "matmal",
              "executableName": "matmal"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "icon": "./public/matmal-icon.png",
              "name": "matmal",
              "productName": "matmal",
              "executableName": "matmal"
            }
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "zzzRYT",
              "name": "matmal"
            },
            "prerelease": false,
            "draft": true
          }
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zzzRYT/matmal.git"
  },
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.29.0",
    "@tailwindcss/vite": "^4.1.17",
    "clsx": "^2.1.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "electron-squirrel-startup": "^1.0.1",
    "fast-xml-parser": "^5.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.0.0",
    "react-router-dom": "^7.9.5",
    "react-toastify": "^11.0.5",
    "tailwindcss": "^4.1.17",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
}
